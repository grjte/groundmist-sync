{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "build",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "server.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}